{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "Iron Pipes",
  "description": "Add various pipes to carry items, water, lava, smoke and sounds around the world.",
  "authors": [
    "Pintér Gábor <pinter.gabor@gmx.at>"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/ironpipes",
    "sources": "https://gitlab.com/pintergabor/ironpipes"
  },
  "license": "MIT",
  "icon": "eu.pintergabor.ironpipes.icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "eu.pintergabor.ironpipes.Mod"
    ],
    "client": [
      "eu.pintergabor.ironpipes.ModClient"
    ],
    "fabric-datagen": [
      "eu.pintergabor.ironpipes.datagen.ModDataGenerator"
    ],
    "modmenu": [
      "eu.pintergabor.ironpipes.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "eu.pintergabor.ironpipes.mixins.json"
  ],
  "depends": {
    "java": ">=21",
    "minecraft": "${minecraft_version}",
    "fabricloader": "${loader_version}",
    "fabric-api": "${fabric_version}",
    "cloth-config": "${cloth_config_version}"
  },
  "suggests": {
    "modmenu": "${modmenu_version}"
