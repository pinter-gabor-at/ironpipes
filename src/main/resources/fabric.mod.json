  "entrypoints": {
    "main": [
      "eu.pintergabor.ironpipes.Mod"
    ],
    "client": [
      "eu.pintergabor.ironpipes.ModClient"
    ],
    "fabric-datagen": [
      "eu.pintergabor.ironpipes.datagen.ModDataGenerator"
    ],
    "modmenu": [
