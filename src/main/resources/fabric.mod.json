{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "Simple Copper Pipes",
  "description": "Adds Copper Pipes with unique mechanics to Minecraft.",
  "authors": [
    "Luna",
    "Treetrain1"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/simple-copper-pipes",
    "issues": "https://github.com/AViewFromTheTop/SimpleCopperPipesMC/issues",
    "sources": "https://github.com/AViewFromTheTop/SimpleCopperPipesMC"
  },
  "license": "MIT",
  "icon": "eu.pintergabor.ironpipes.icon.png",
